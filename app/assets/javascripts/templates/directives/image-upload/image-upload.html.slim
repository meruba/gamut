.image-avatar
  identicon.img-responsive ng-if="!vm.image" size="100" username="vm.textIdenticon"
  .img-cld ng-if="vm.image"
    img.img-rounded (ng-src="{{vm.image}}"
                    style="max-width:{{vm.width}}; max-height:{{vm.height}}")
  .btn-upload.btn.btn-default.btn-xs (ng-if="vm.options.url"
                                      href="#"
                                      ngf-select="vm.uploadFiles($files)"
                                      title="upload"
                                      resetOnClick="true")
    | {{ ::'action.uploadImage' | translate }}
