.col-md-4.col-md-offset-4
  .login
    .login-screen
      .logo-app.text-center
        img src="/images/logo.svg"
      form (ng-init="loginForm = {}"
            ng-submit="submitLogin(loginForm)"
            role="form")
        .form-group
          label for="email" {{ ::'login.email' | translate }}
          input#email.form-control (name="email"
                                    ng-model="loginForm.email"
                                    required="required"
                                    type="email")
        .form-group
          label for="password" {{ ::'login.password' | translate }}
          input#password.form-control (name="password"
                                      ng-model="loginForm.password"
                                      required="required"
                                      type="password")
        button.btn.btn-block.btn-primary.btn-sm type="submit" {{ ::'login' | translate }}
        .login-link
          span {{ ::'login.info_login' | translate }}
          a href="#/register" translate="" ui-sref=("register") {{ ::'signup' | translate }}
