.restaurants-wrapper
  .title Establecimientos
  .restaurants
    .restaurant(ng-repeat="restaurant in vm.restaurants" ng-click="vm.selectRestaurant(restaurant)" ng-class="{'selected' : restaurant.id === vm.selectedRestaurant.id}")
      .logo
        .img-circle
          image-upload options="{image: restaurant.logo, identicon: restaurant.email}"
      .description
        .name {{restaurant.name}}
  .btn-wrapper.text-center
    button.btn-cdm.btn-cdm-primary(ng-click="vm.newRestaurant()") Nuevo Establecimiento
